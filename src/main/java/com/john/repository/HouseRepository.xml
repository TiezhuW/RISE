<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.john.repository.HouseRepository">
    <select id="findAll" resultType="com.john.entity.House">
        select *
        from apartments
        <where>
            city = #{arg0}
            and domain = #{arg1}
            <if test="minPrice != 0">
                and price &gt;= #{minPrice}
            </if>
            <if test="maxPrice != 0">
                and price &lt;= #{maxPrice}
            </if>
            <if test="minArea != 0">
                and area &gt;= #{minArea}
            </if>
            <if test="maxArea != 0">
                and area &lt;= #{maxArea}
            </if>
        </where>
        order by clicktimes desc
    </select>

    <select id="findAllInAreaOrderAsc" resultType="com.john.entity.House">
        select *
        from apartments
        <where>
            city = #{arg0}
            and domain = #{arg1}
            <if test="minPrice != 0">
                and price &gt;= #{minPrice}
            </if>
            <if test="maxPrice != 0">
                and price &lt;= #{maxPrice}
            </if>
            <if test="minArea != 0">
                and area &gt;= #{minArea}
            </if>
            <if test="maxArea != 0">
                and area &lt;= #{maxArea}
            </if>
        </where>
        order by area asc
    </select>

    <select id="findAllInAreaOrderDesc" resultType="com.john.entity.House">
        select *
        from apartments
        <where>
            city = #{arg0}
            and domain = #{arg1}
            <if test="minPrice != 0">
                and price &gt;= #{minPrice}
            </if>
            <if test="maxPrice != 0">
                and price &lt;= #{maxPrice}
            </if>
            <if test="minArea != 0">
                and area &gt;= #{minArea}
            </if>
            <if test="maxArea != 0">
                and area &lt;= #{maxArea}
            </if>
        </where>
        order by area desc
    </select>

    <select id="findAllInPriceOrderAsc" resultType="com.john.entity.House">
        select *
        from apartments
        <where>
            city = #{arg0}
            and domain = #{arg1}
            <if test="minPrice != 0">
                and price &gt;= #{minPrice}
            </if>
            <if test="maxPrice != 0">
                and price &lt;= #{maxPrice}
            </if>
            <if test="minArea != 0">
                and area &gt;= #{minArea}
            </if>
            <if test="maxArea != 0">
                and area &lt;= #{maxArea}
            </if>
        </where>
        order by price asc
    </select>

    <select id="findAllInPriceOrderDesc" resultType="com.john.entity.House">
        select *
        from apartments
        <where>
            city = #{arg0}
            and domain = #{arg1}
            <if test="minPrice != 0">
                and price &gt;= #{minPrice}
            </if>
            <if test="maxPrice != 0">
                and price &lt;= #{maxPrice}
            </if>
            <if test="minArea != 0">
                and area &gt;= #{minArea}
            </if>
            <if test="maxArea != 0">
                and area &lt;= #{maxArea}
            </if>
        </where>
        order by price desc
    </select>

    <update id="clickTimesInc" parameterType="java.lang.String">
        update house set clicktimes = clicktimes + 1 where url = #{url}
    </update>

    <select id="findByUrl" parameterType="java.lang.String" resultType="com.john.entity.House">
        select * from apartments where url = #{url}
    </select>

    <insert id="addHouse" parameterType="com.john.entity.House">
        insert into apartments
        <set>
            city = #{city},
            domain = #{domain},
            <if test="direction != null">
                direction = #{direction},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="area != 0">
                area = #{area},
            </if>
            <if test="floor != null">
                floor = #{floor},
            </if>
            <if test="layout != null">
                layout = #{layout},
            </if>
            <if test="lift != null">
                lift = #{lift},
            </if>
            <if test="location != null">
                location = #{location},
            </if>
            <if test="price != 0">
                price = #{price},
            </if>
            url = #{url},
            clicktimes = 0
        </set>
    </insert>

    <insert id="addCollection">
        insert into collection values (#{arg0}, #{arg1})
    </insert>

    <delete id="deleteCollection">
        delete from collection where username = #{arg0} and house_url = #{arg1}
    </delete>

    <resultMap id="commentMap" type="com.john.entity.Comment">
        <result column="time" property="time"/>
        <result column="comment" property="comment"/>
        <association property="user" javaType="com.john.entity.User">
           <result column="username" property="username"/>
        </association>
        <association property="house" javaType="com.john.entity.House">
            <result column="house_url" property="url"/>
        </association>
    </resultMap>

    <select id="findCommentByUrl" parameterType="java.lang.String" resultMap="commentMap">
        select * from comment where house_url = #{url}
    </select>

    <insert id="addComment">
        insert into comment values (#{arg0}, #{arg1}, #{arg2}, #{arg3})
    </insert>

    <delete id="deleteComment">
        delete from comment where username = #{arg0} and house_url = #{arg1}
    </delete>

    <delete id="deleteHouse" parameterType="java.lang.String">
        delete from apartments where url = #{url};
        delete from comment where house_url = #{url};
    </delete>
</mapper>